<div class= "row ">
	<div class="col-md-5 col-md-offset-1">

<h2>User info</h2>

<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


<%= form_for(@user) do |f| %>

		<samp>Name</samp>
		<%= f.text_field :name %>
		<p> </p>

		<samp>Image</samp>
			<%=attachment_image_tag @user, :profile_image, :fill, 70, 70, format: 'jpeg',fallback: "no_image.jpg", size:'70x70' %>
			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
		<p> </p>
		<samp>Introduction</samp>
		<%= f.text_area :introduction %>
		<p> </p>
<%= f.submit 'Update User', class: "btn btn-default" %>
<% end %>
</div>
</div>


