 <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class= "container">
<div class= "row">
<div class= "col-md-3 ">

 <h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, :fill, 70, 70, format: 'jpeg',fallback: "no_image.jpg", size:'70x70' %>

		<table class="table">
			<tbody>

				<tr>
					<td>name</td>
					<td><%= current_user.name %></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><%= current_user.introduction %></td>
				</tr>
			</tbody>
		 </table>
<%= link_to edit_user_path(current_user) do %>
<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_9733" aria-hidden="true"></span> 
<% end %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "col-xs-12" %>

<h4>Opinion</h4>
<%= f.text_area :body, class: "col-xs-12" %>

<%= f.submit 'Create Book', class: "btn btn-default col-xs-12" %>

<% end %>
</div>

<div class="col-md-9">
	<h2>Users</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>image</th>
				<th>Name</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>

					<td class="col-md-4"><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg", size:'50x50' %></td>
					<td class="col-md-4"><%= user.name %></td>
					<td class="col-md-4"><%= link_to  'Show' , user_path(user) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>
</div>
