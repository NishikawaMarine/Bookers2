 <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class= "container">
<div class= "row">
<div class= "col-md-3 ">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 70, 70, format: 'jpeg',fallback: "no_image.jpg", size:'70x70' %>

		<table class="table ">
			<tbody>

				<tr>
					<td>name</td>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><%= @user.introduction %></td>
				</tr>
				<tr>
		　　　		<td><%= render 'stats', user: @user %></td>
					<td><%= render 'follow_form', user: @user %></td>
				</tr>
			</tbody>
		 </table>

<%= link_to edit_user_path(@user) do %>
<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_9733" aria-hidden="true"></span> 
<% end %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "col-xs-12" %>

<h4>Opinion</h4>
<%= f.text_area :body, class: "col-xs-12" %>

<%= f.submit 'Create Book', class: "btn btn-default col-xs-12" %>

<% end %>
</div>

<div class="col-md-9">
	<h2>Books</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @user.books.each do |book| %>
				<tr>
					<td class="col-md-3"><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg", size:'50x50' %></td>
					<td class="col-md-3"><%= link_to book.title, book_path(book) %> </td>
					<td class="col-md-3"><%= book.body %></td>
					<td class="col-md-3">コメント数: <%= book.book_comments.count %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>


</div>
</div>
