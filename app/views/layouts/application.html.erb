<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p class="title">Bookers</p>
    <nav class= "nav">
      
      <% if user_signed_in? %>

      <ul>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><span> </span><%= link_to "Home", user_path(current_user) %></li></div>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><span> </span><%= link_to "Users", users_path %></li></div>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-book" aria-hidden="true"></span><span> </span><%= link_to "Books", books_path %></li></div>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><span> </span><%= link_to "logout", destroy_user_session_path, method: :delete %></li></div>
      </ul>
      <% else %>

      <ul>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><span> </span><%= link_to "Home", root_path %></li></div>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-link" aria-hidden="true"></span><span> </span><%= link_to "About", home_about_path %></li></div>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span><span> </span><%= link_to "sign up",  new_user_registration_path %></li></div>
        <div class= "nav-list"><li class= "nav-list-item"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><span> </span><%= link_to "login", new_user_session_path %></li></div>
      </ul>

      <% end %>
    </nav>
  </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
